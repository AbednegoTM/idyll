{
    "$schema": "http://json-schema.org/draft-06/schema", 
    "title": "AST Schema V1", 
    "description": "Structure of an AST object",
    "type": "object",
    "properties": {
        "id": {
            "desceription": "A unique identifier for the current element", 
            "id" : "integer"
        }, 
        "type" : {
            "description": "The type category of the element (html/component/textnode)",
            "type": "string"
        },
        "name" : {
            "description": "The name of the element", 
            "type": "string"
        }, 
        "value" : {
            "description": "Type of value to which the element should be evaluated (value/variable/expression)",
            "type": "string"
        }, 
        "properties" : {
            "description": "The properties/attributes of the element", 
            "type": "array", 
            "items": {
                "type": "object", 
                "properties": {
                    "name": {
                        "description": "Name of the property", 
                        "type": "string"
                    }, 
                    "value": {
                        "description": "Value for the particular property", 
                        "type": "string"
                    }
                },
                "required": [ "name", "value"]
            }, 
            "minItems": 1, 
            "uniqueItems": true
        }, 
        "children": {
            "description": "The children of the element.",
            "type": "array", 
            "items": {
                "$ref": "#"
            }, 
            "uniqueItems": true
        }
    },
    "required" : [ "id", "type", "name", "value" ]
}